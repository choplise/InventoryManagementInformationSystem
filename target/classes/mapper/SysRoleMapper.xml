<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.shixuan.inventory.mapper.SysRoleMapper">
    
    <resultMap id="BaseResultMap" type="org.shixuan.inventory.domain.SysRole">
        <id column="id" property="id" />
        <result column="role_name" property="roleName" />
        <result column="role_code" property="roleCode" />
        <result column="description" property="description" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
    
    <sql id="Base_Column_List">
        id, role_name, role_code, description, create_time, update_time
    </sql>
    
    <select id="selectList" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from sys_role
        <where>
            <if test="roleName != null and roleName != ''">
                and role_name like concat('%', #{roleName}, '%')
            </if>
        </where>
        order by create_time desc
    </select>
    
    <select id="selectAll" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from sys_role order by create_time asc
    </select>
    
    <select id="selectById" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from sys_role
        where id = #{id}
    </select>
    
    <select id="selectByRoleCode" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" />
        from sys_role
        where role_code = #{roleCode}
    </select>

    <insert id="insert" parameterType="org.shixuan.inventory.domain.SysRole" useGeneratedKeys="true" keyProperty="id">
        insert into sys_role (role_name, role_code, description)
        values (#{roleName}, #{roleCode}, #{description})
    </insert>

    <update id="update" parameterType="org.shixuan.inventory.domain.SysRole">
        update sys_role
        <set>
            <if test="roleName != null">role_name = #{roleName},</if>
            <if test="roleCode != null">role_code = #{roleCode},</if>
            <if test="description != null">description = #{description},</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete from sys_role where id = #{id}
    </delete>

    <select id="selectPermissionIdsByRoleId" resultType="java.lang.Long">
        select permission_id from sys_role_permission where role_id = #{roleId}
    </select>

    <delete id="deleteRolePermissionsByRoleId" parameterType="java.lang.Long">
        delete from sys_role_permission where role_id = #{roleId}
    </delete>

    <insert id="batchInsertRolePermissions">
        insert into sys_role_permission (role_id, permission_id) values
        <foreach collection="permissionIds" item="permissionId" separator=",">
            (#{roleId}, #{permissionId})
        </foreach>
    </insert>
</mapper> 